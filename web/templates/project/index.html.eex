<div class="projects">
  <div class="link-list">
    <h2>Projects I'm involved in or currently working on</h2>
    <ul>
      <% available_link_classes = ~w(github gitlab) %> 
      <%= for project <- @projects do %>
        <div class="project-preview">
          <li>
            <span class="name"> <%= project.name %> </span>
            <span class="desc">- (<%= project.desc %>)</span>
            <%= if project.links do %>
              <div class="links">
                  <%= for {name, to} <- project.links do %>
                    <%= link(name, to: to, 
                     class: if(name in available_link_classes, 
                     do: name, else: "default")) %> 
                  <% end %>
              </div>
            <% end %>
          </li>
        </div>
      <% end %>
    </ul>
  </div>
</div>

